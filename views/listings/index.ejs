              <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
              </div>
            </div>
    </div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">   <!-- yaha humne different class define kar di hai jiski help se ispe different styling apply ho jaayegi jo bootstrap pe define hai -->
    <% for(let listing of allListings) { %>

      <a href="/listings/<%= listing._id %>" class="listing-link">    <!---yha humne pure card ko anchor tag me wrapup kar liya hai jo jese hii card pe hum kahi bhi click karenge to hum uss particular card ki details me pooch jaayenge -->
    <div class="card col listing-card" >
      <img src=" <%= listing.image.url %> "  class="card-img-top" alt="listing image " style="height: 20rem;" >
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br>
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / night   <!--- iski help se indian version me price display hogi -->
          <small class="tax-info">&nbsp; +18% GST</small>
        </p>
      </div>
    </div>
  
    <% } %>
