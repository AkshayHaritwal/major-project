<% layout("/layouts/boilerplate") %> 

<div class="row mt-3">
    <h1 class="col-6 offset-3">signup on wanderLust</h1>
    
    <div class="col-6 offset-3">

        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3"> <!-- yaha humne username ke liye input box create kar liye hai -->
        
                <label for="username" class="form-label">Username</label>
                <input name="username"  type="text" class="form-control" required/>
                <div class="invalid-feedback">Username is required</div>
              </div>

              
            <div class="mb-3"><!-- yaha humne email ke liye input box create kar liye hai -->
        
                <label for="email" class="form-label">Email</label>
                <input name="email"  type="text" class="form-control" required/>
              </div>
        

        
        <div class="mb-3"><!-- yaha humne password ke liye input box create kar liye hai -->
        
            <label for="password" class="form-label">Password</label>
            <input name="password"  type="password" class="form-control" required/>
          </div>

          <button class="btn btn-success">SignUp</button>
    </form>

        </div>
    </div>